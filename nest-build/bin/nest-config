#! /bin/sh

prefix="/p/home/jusers/linssen1/jusuf/NestBenchmark/nest-simulator-install"
exec_prefix=${prefix}

usage()
{
    cat <<EOF
Usage: nest-config [OPTION]

Known values for OPTION are:

  --prefix              NEST install prefix for architecture-independent files
  --exec-prefix         NEST install prefix for architecture-dependent files
  --libs                print library linking information for extension modules
  --cflags              print pre-processor and compiler flags
  --includes            print includes
  --compiler            print the compiler used to compile NEST
  --compiler-name       Print the compiler name used to compile NEST
  --compiler-version    Print the compiler version used to compile NEST
  --python-executable   print full path to Python interpreter used
  --python-version      print Python version string for interpreter
  --static-libraries    print "ON" if configured for static libraries, "OFF" otherwise
  --docdir              print the relative path (to prefix) to the installed documentation
  --datadir             print the relative path (to prefix) to the installed data
  --libdir              print the relative path (to prefix) to the installed libraries
  --help                display this help and exit
  --version             output version information

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

cflags=false
libs=false

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --prefix=*)
        prefix=$optarg
        ;;
    --prefix)
        echo $prefix
        ;;
    --exec-prefix)
        echo $exec_prefix
        ;;
    --version)
        echo "3.6.0-post0.dev0"
        ;;
    --help)
        usage 0
        ;;
    --includes)
        echo " -I/p/home/jusers/linssen1/jusuf/NestBenchmark/nest-simulator-install/include/nest -I/p/software/jusuf/stages/2023/software/libtool/2.4.7-GCCcore-11.3.0/include -I/p/software/jusuf/stages/2023/software/GSL/2.7-GCCcore-11.3.0/include -I/p/software/jusuf/stages/2023/software/Boost/1.79.0-GCCcore-11.3.0/include "
        ;;
    --cflags)
        echo " -std=c++17 -Wall -fopenmp -O3 -fdiagnostics-color=auto"
        ;;
    --libs)
        echo "-L$prefix/lib64/nest -lnest -lsli -fopenmp /p/software/jusuf/stages/2023/software/libtool/2.4.7-GCCcore-11.3.0/lib/libltdl.so  /p/software/jusuf/stages/2023/software/GSL/2.7-GCCcore-11.3.0/lib/libgsl.so /p/software/jusuf/stages/2023/software/GSL/2.7-GCCcore-11.3.0/lib/libgslcblas.so     "
        ;;
    --compiler)
        echo "/p/software/jusuf/stages/2023/software/GCCcore/11.3.0/bin/c++"
        ;;
    --compiler-name)
        echo "GNU"
        ;;
    --compiler-version)
        echo "11.3.0"
        ;;
    --python-executable)
        echo "/p/software/jusuf/stages/2023/software/Python/3.10.4-GCCcore-11.3.0/bin/python3.10"
        ;;
    --python-version)
        echo "3.10.4"
        ;;

    --static-libraries)
        echo "OFF"
        ;;
    --docdir)
        echo "share/doc/nest"
        ;;
    --datadir)
        echo "share/nest"
        ;;
    --libdir)
        echo "lib64"
        ;;
    *)
        usage
        exit 1
        ;;
    esac
    shift
done

exit 0
